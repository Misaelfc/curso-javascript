let age = 28; // Números
let isDev = false; // Boolean
let value = undefined; // Undefined
let valorNulo = null; // null
let symbol = Symbol("#"); // Symbol
let numeroGrande = 9007199254740991n; // BigInt
// 7. A continuación, modifica los valores de las variables por otros de distinto tipo
let number = 12345; // Número (anteriormente cadena de texto)
let cadenaDeTexto = "Treinta y cinco"; // Cadena de texto (anteriormente número)
let isTeacher = "true"; // Cadena de texto (anteriormente booleano)
let indefinido = 42; // Número (anteriormente undefined)
let nulo = "No disponible"; // Cadena de texto (anteriormente null)
let boolean = false; // Booleano (anteriormente símbolo)
let String = "1000000000000000"; // Cadena de texto (anteriormente BigInt)
// 8. Declara constantes con valores asociados a todos los tipos de datos primitivos
const n = "Misael Flores"; // Cadena de texto (String)
const e = 33; // Número (Number)
const i = true; // Booleano (Boolean)
const v = undefined; // Undefined
const nu = null; // Null
const sim = Symbol("@"); // Símbolo (Symbol)
const bi = 10000000000000000000000n; // BigInt
